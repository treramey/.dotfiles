{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": true,
  "permission": {
    "read": {
      "*": "allow",
      "*.env": "deny",
      "*.env.*": "deny",
      "*.envrc": "deny",
      "secrets/*": "deny"
    },
    "external_directory": {
      "/Users/TRamey/Code/personal/opencode/*": "allow",
      "/Users/TRamey/.dotfiles/home/.config/opencode/*": "allow",
      "/Users/TRamey/.config/opencode/*": "allow"
    }
  },
  "enabled_providers": [
    "anthropic",
    "cloudflare-ai-gateway"
  ],
  "theme": "rosepine",
  "keybinds": {
    "leader": "ctrl+o",
    "messages_half_page_up": "ctrl+u",
    "messages_half_page_down": "ctrl+d",
    "input_delete_to_line_start": "none",
    "input_delete": "delete,shift+delete"
  },
  "mcp": {
    "cloudflare-docs": {
      "type": "remote",
      "url": "https://docs.mcp.cloudflare.com/mcp",
      "enabled": false
    },
    "jira": {
      "type": "remote",
      "url": "https://jira.mcp.cfdata.org/mcp",
      "enabled": false
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": true
    },
    "grep_app": {
      "type": "remote",
      "url": "https://mcp.grep.app",
      "enabled": true
    }
  }
}
